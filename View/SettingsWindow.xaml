<Window x:Class="WPF_App_For_Checking_Prices.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App_For_Checking_Prices.View"
        mc:Ignorable="d"
        Title="SettingWindow" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Settings For Serial Port:" TextAlignment="Center" VerticalAlignment="Top" Height="16" Margin="0,10,0,0"/>

        <ComboBox x:Name="PortComboBox"
                  HorizontalAlignment="Center" VerticalAlignment="Top"
                  Width="280" Margin="0,41,0,0"
                  ItemsSource="{Binding AvailablePorts}"
                  SelectedItem="{Binding SelectedPort}"/>

        <Button Content="Zapisz" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,68,0,0" Width="280" Click="Button_Save_Click"/>
    </Grid>
</Window>
